<?xml version="1.0" encoding="utf-8"?>
    <odoo>

    <record id="view_todo_list_tree" model="ir.ui.view">
          <field name="name">todo.list.tree</field>
          <field name="model">todo.list</field>
          <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="completed"/>
          </tree>
      </field>
    </record>


    <record id="view_todo_list_form" model="ir.ui.view">
        <field name="name">todo.list.form</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>  
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="completed"/>
                    </group>           
                </sheet>
            </form>
        </field>
    </record>
    

    <record id="action_todo_list" model="ir.actions.act_window">
        <field name="name">Todo list</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first todo list !
            </p>
        </field>
    </record>


    <record id="action_owl_todo_list_js" model="ir.actions.client">
        <field name="name">Todo List OWL</field>
        <field name="tag">owl.action_todo_list_js</field>
    </record>

    <menuitem name="OWL tutorial" id="menu_owl_tutorials">
        <menuitem name="TODO list" id="menu_owl_todo_list" sequence="1" action="action_todo_list"/>
        <menuitem name="Todo List OWL" id="menu_owl_todo_list_js" sequence="10" action="action_owl_todo_list_js"/>
    </menuitem>


    </odoo>